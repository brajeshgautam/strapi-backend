{
  "collectionName": "components_elements_social_posts",
  "info": {
    "displayName": "Social Post",
    "description": "Individual social media post"
  },
  "options": {},
  "attributes": {
    "platform": {
      "type": "enumeration",
      "enum": ["facebook", "instagram", "twitter", "linkedin"],
      "required": true
    },
    "content": {
      "type": "text",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "postUrl": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "datetime",
      "required": true
    }
  }
} 