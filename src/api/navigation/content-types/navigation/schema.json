{
  "kind": "singleType",
  "collectionName": "navigations",
  "info": {
    "singularName": "navigation",
    "pluralName": "navigations",
    "displayName": "Navigation",
    "description": "Configure the main navigation menu"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "logo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "contactInfo": {
      "type": "component",
      "repeatable": false,
      "component": "elements.contact-info",
      "required": true
    },
    "socialLinks": {
      "type": "component",
      "repeatable": false,
      "component": "elements.social-links",
      "required": true
    },
    "menuItems": {
      "type": "component",
      "repeatable": true,
      "component": "elements.menu-item",
      "required": true,
      "min": 1
    },
    "languages": {
      "type": "component",
      "repeatable": true,
      "component": "elements.language",
      "required": true,
      "min": 1
    }
  }
} 